<Window x:Class="Assignment5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="Control Tower" Height="574">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="Flights" 
                Height="500" 
                VerticalAlignment="Top" MinWidth="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Flight Code" MinWidth="50"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Status" MinWidth="80"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Time" MinWidth="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <Viewbox >
                <StackPanel  Orientation="Horizontal">
                    <Label Content="Next flight:" />
                    <TextBox Text="TextBox" Width="400" />
                    <Button Content="Send next plane to runway"  Click="Button_Send_Click"/>
                </StackPanel>
            </Viewbox>
        </StackPanel>
    </Grid>
</Window>
