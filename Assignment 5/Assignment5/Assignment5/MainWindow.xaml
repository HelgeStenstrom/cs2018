<Window x:Class="Assignment5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="Control Tower" Height="350" Width="925">
    <Grid>
        <Viewbox Margin="8" >
            <StackPanel  Orientation="Horizontal">
                <Label Content="Next flight:" />
                <TextBox 
                   
                    
                
                    Text="TextBox" 
                
                    
                    />
                <Button Content="Send next plane to runway"  Click="Button_Send_Click"/>
            </StackPanel>
        </Viewbox>
        <DataGrid x:Name="Flighter" 
            HorizontalAlignment="Left" 
            Height="100" 
            Margin="84,78,0,0" 
            VerticalAlignment="Top" 
            Width="144">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Ett" HeaderStringFormat="sträng"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Två"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" HeaderStringFormat="TreSträng" Header="3:a"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="textBlock" 
                   HorizontalAlignment="Left" 
                   Margin="195,170,0,0" 
                   TextWrapping="Wrap" 
                   Text="Hello World!" 
                   Height="44"
                   Width="102"
                   VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="361,65,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <DatePicker HorizontalAlignment="Left" Margin="211,56,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="297,145,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
